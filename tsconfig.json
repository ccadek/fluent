{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "strict": false,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "pretty": true,
    "newLine": "lf",
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
