{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": true,
    "strict": false,
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "pretty": true,
    "newLine": "lf",
    "importHelpers": true,
    "composite": false
  }
}
