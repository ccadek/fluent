{
  "name": "@goatlab/fluent-loki",
  "version": "0.7.1",
  "scripts": {
    "install-p": "yarn",
    "prebuild": "rimraf dist",
    "prestart": "rimraf dist",
    "predev": "rimraf dist",
    "test": "jest --forceExit",
    "dev": "tsc --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "update:packages": "npm-check-updates -u && yarn",
    "serve": "tsc -w",
    "build": "tsc"
  },
  "dependencies": {
    "@goatlab/dates": "^0.6.6",
    "@goatlab/fluent": "^0.7.12",
    "@goatlab/js-utils": "^0.8.8",
    "lokijs": "^1.5.12"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/lokijs": "^1.5.7",
    "@types/node": "^17.0.23",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.5.0",
    "jest": "^27.5.1",
    "jest-environment-node": "^27.5.1",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "turbo": "^1.1.10",
    "typescript": "^4.6.3"
  },
  "keywords": [
    "typescript",
    "TS"
  ],
  "author": "ignacio.cabrera@goatlab.io",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "never",
        []
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm test",
      "commit-msg": "exec < /dev/tty && git cz --hook || true && commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run build"
    }
  },
  "release-it": {
    "src": {
      "commitMessage": "ci: CI-1 [Release] v%s"
    },
    "git": {
      "requireBranch": "master",
      "commitArgs": [
        "--no-verify"
      ]
    },
    "hooks": {
      "before:init": [
        "npm run build",
        "npm run pack"
      ],
      "after:bump": "npm run changelog",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
    },
    "github": {
      "release": true,
      "assets": [
        "./*.zip"
      ]
    }
  },
  "auto-changelog": {
    "commitLimit": false,
    "unreleased": true,
    "issueUrl": "https://goatlab.atlassian.net/browse/{id}",
    "replaceText": {
      "[Ff]eature:": "",
      "[Ff]ix:": "",
      "[Bb]reak:": "",
      "([A-Z]+-\\d+)": "[$1](https://goatlab.atlassian.net/browse//$1) - "
    },
    "includeBranch": [
      "master"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira"
    },
    "mongodbMemoryServer": {
      "version": "latest"
    }
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "description": "Readable query Interface & API generator for TS and Node",
  "homepage": "https://docs.goatlab.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "./dist/**/*"
  ]
}
