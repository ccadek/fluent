{
  "name": "@goatlab/node-utils",
  "version": "0.8.30",
  "description": "Readable query Interface & API generator for TS and Node",
  "homepage": "https://docs.goatlab.io",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "install-p": "yarn",
    "prebuild": "rimraf dist",
    "prestart": "rimraf dist",
    "predev": "rimraf dist",
    "test": "jest --forceExit",
    "dev": "tsc --watch",
    "lint": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "update:packages": "npm-check-updates -u && yarn",
    "serve": "tsc -w",
    "build": "tsc"
  },
  "keywords": [
    "typescript",
    "TS"
  ],
  "author": "ignacio.cabrera@goatlab.io",
  "license": "MIT",
  "dependencies": {
    "@goatlab/js-utils": "^0.8.29",
    "@types/through2-concurrent": "^2.0.1",
    "bcrypt": "^5.0.1",
    "child_process": "^1.0.2",
    "cross-spawn": "^7.0.3",
    "detect-port": "^1.3.0",
    "dockerode": "^3.3.1",
    "fs": "^0.0.1-security",
    "got-cjs": "^12.5.4",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.0",
    "modern-spawn": "^1.0.0",
    "net": "^1.0.2",
    "path": "^0.12.7",
    "portfinder": "^1.0.32",
    "rimraf": "^3.0.2",
    "through2-concurrent": "^2.0.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.9",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "turbo": "^1.1.10",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">=14.16.0"
  }
}
